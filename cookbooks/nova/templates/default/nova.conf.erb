--dhcpbridge_flagfile=/etc/nova/nova.conf
--dhcpbridge=/usr/bin/nova-dhcpbridge
--logdir=/var/log/nova
--state_path=/var/lib/nova
--verbose
--my_ip=<%= node[:nova][:my_ip] %>
--iscsi_ip_prefix=<%= node[:nova][:my_ip].split('.')[0..2].join('.') %>
<% if @sql_connection %>--sql_connection=<%= @sql_connection %><% end %>
<% if node[:nova][:libvirt_type] %>--libvirt_type=<%= node[:nova][:libvirt_type] %><% end %>
<% if @rabbit_server %>
--rabbit_host=<%= @rabbit_server[:address] %>
--rabbit_port=<%= @rabbit_server[:port] %>
--rabbit_userid=<%= @rabbit_server[:user] %>
--rabbit_password=<%= @rabbit_server[:password] %>
--rabbit_virtual_host=<%= @rabbit_server[:vhost] %>
<% end %>
